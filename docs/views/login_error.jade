    .mn-content.fixed-sidebar
      header.mn-header.navbar-fixed
        nav.teal.lighten-1
          .nav-wrapper.row
            section.material-design-hamburger.navigation-toggle
              a.button-collapse.show-on-large.material-design-hamburger__icon(href='javascript:void(0)', data-activates='slide-out')
                span.material-design-hamburger__layer
            a(href='/')
              .header-title.col.s3.m3
                span.chapter-title Anonymous Pictures
            //
              BOTON DE CERRAR SESION
              <ul class="right col s9 m3 nav-right-menu">
              <li><a href="javascript:void(0)" data-activates="chat-sidebar" class="chat-button show-on-large"><i class="material-icons">power_settings_new</i></a></li>
              </ul>
      aside#slide-out.side-nav.white.fixed
        .side-nav-wrapper
          // logo
          img.responsive-img(src='assets/images/logo.png', alt='')
          // Menu lateral izquierdo
          ul.sidebar-menu.collapsible.collapsible-accordion(data-collapsible='accordion')
            li.no-padding.active
              a.waves-effect.waves-grey.active(href='/')
                i.material-icons perm_media
                | INICIO
            li.no-padding
            li.no-padding.active
              a.waves-effect.waves-grey.active(href='#')
                i.material-icons person_pin
                | login
            li.no-padding
            li.no-padding.active
              a.waves-effect.waves-grey.active(href='registrarse')
                i.material-icons input
                | crear cuenta
            li.no-padding
            li.no-padding.active
              a.waves-effect.waves-grey.active(href='chat')
                i.material-icons face
                | chat
            li.no-padding
          .footer
            p.copyright
              | © 2017
              br
              | Carlos Fernandez Donate
              br
              |  David Dorta Acosta
            a(href='/#!') Privacy
            |  &
            a(href='/#!') Terms
      main.mn-inner.inner-active-sidebar
        // Contenedor del cuerpo de la pagina
        .middle-content
          .slider.fullscreen
            ul.slides
              li
                img(src='https://images.unsplash.com/photo-1464817739973-0128fe77aaa1?dpr=1&auto=compress,format&fit=crop&w=1199&h=799&q=80&cs=tinysrgb&crop=')
                // random image
                .caption.center-align
                  form(action="login", method="post")
                    .group
                      input(type='text', name='username')
                      span.highlight
                      span.bar
                      label
                        i.material-icons perm_identity
                        | Usuario
                    .group
                      input(type='password', name='password')
                      span.highlight
                      span.bar
                      label
                        i.material-icons unlock
                        | Contraseña
                    button.button.buttonBlue(type='submit')
                      | login
                      .ripples.buttonRipples
                        span.ripplesCircle
                    h2 Usuario o Contraseña incorrecta
      // Contenedor del footer
      .page-footer
    .left-sidebar-hover
